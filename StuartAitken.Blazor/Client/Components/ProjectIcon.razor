
<MudTooltip Text="@Tooltip">
	<MudImage Fluid Src="@Src" Width="@width" Style="padding:1px;margin: 0px 7px" />
</MudTooltip>

@code {
	[Parameter]
	public string Src { get; set; }

	[Parameter]
	public string Tooltip { get; set; }

	[Parameter]
	public bool Small { get; set; } = false;

	private int width => Small ? 18 : 30;
}
